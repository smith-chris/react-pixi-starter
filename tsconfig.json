{
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./src",
    "outDir": "./dist/",
    "skipLibCheck": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/**/*"]
}
