{
  "compilerOptions": {
    "moduleResolution": "node",
    "strict": true,
    "outDir": "./dist/",
    "baseUrl": "./src",
    "paths": {
      "@ash.ts/ts": ["../ash/packages/ash/src/index.ts"],
      "@ash.ts/*": ["../ash/packages/*/src"]
    },
    "sourceMap": true,
    "experimentalDecorators": true,
    "target": "es5",
    "module": "es2015",
    "declaration": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true,
    "downlevelIteration": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowUnreachableCode": false,
    "lib": [
      "dom",
      "es5",
      "es2015.promise",
      "es2015.collection",
      "es2015.iterable"
    ]
  },
  "include": ["./src/**/*"]
}
